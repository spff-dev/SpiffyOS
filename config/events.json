{
  "rateLimitSeconds": 1.2,
  "follows": {
    "enabled": true,
    "cooldownSeconds": 5,
    "dedupeWindowSeconds": 15,
    "template": "❤️ Thanks for the follow, {user.name}!",
    "batching": {
      "enabled": false,
      "windowSeconds": 20,
      "template": "❤️ Thanks for the follows: {user.list}"
    }
  },
  "subs": {
    "enabled": true,
    "cooldownSeconds": 0,
    "templateNew": "🎉 {user.name} just subscribed at {sub.tier}!",
    "templateGift": "🎁 {gifter.name} gifted a sub to {user.name}!",
    "templateResub": "🔁 {user.name} resubbed ({sub.months} months)!",
    "templateMessage": "💬 {user.name}: {message}"
  },
  "bits": {
    "enabled": true,
    "cooldownSeconds": 0,
    "template": "✨ {user.name} cheered {bits.amount} bits!"
  },
  "raids": {
    "enabled": true,
    "cooldownSeconds": 5,
    "template": "🚀 Raid from {raider.name} with {raider.viewers} viewers — welcome in!"
  },
  "redemptions": {
    "enabled": true,
    "cooldownSeconds": 0,
    "template": "🟣 {user.name} redeemed “{reward.title}”{reward.input}"
  }
}
